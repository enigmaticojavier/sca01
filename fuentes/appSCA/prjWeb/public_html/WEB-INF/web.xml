<?xml version = '1.0' encoding = 'windows-1252'?>
<!DOCTYPE web-app
	PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
	"http://java.sun.com/j2ee/dtds/web-app_2_2.dtd"
>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd" version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee">

    <servlet>
        <servlet-name>DescargaServlet</servlet-name>
        <servlet-class>gob.pe.minam.sca.servlet.DescargaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DescargaServlet</servlet-name>
        <url-pattern>/DescargaServlet</url-pattern>
    </servlet-mapping>
   <filter>  
        <filter-name>FiltroDescarga</filter-name>  
        <filter-class>  
            gob.mimdes.sime.filtro.FiltroDescarga
        </filter-class>  
        <init-param>  
            <param-name>parametroFiltroDescarga</param-name>  
            <param-value>parametroFiltroDescarga en prueba</param-value>  
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>FiltroDescarga</filter-name>
        <url-pattern>/DescargaServlet*</url-pattern>
    </filter-mapping>
    
    <servlet-mapping>
        <servlet-name>DisplaySource</servlet-name>
        <url-pattern>*.source</url-pattern>
    </servlet-mapping>

    <context-param>
      <param-name>displaytag.properties</param-name>               
      <param-value>WEB-INF/displaytag.properties</param-value> 
    </context-param>
    <context-param>
        <param-name>tilesDefinitions</param-name>
        <param-value>/WEB-INF/tiles-principal.xml</param-value>
    </context-param>
    <filter>
        <filter-name>struts2</filter-name>
        <filter-class>org.apache.struts2.dispatcher.ng.filter.StrutsPrepareAndExecuteFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>struts2</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    
    
    
    <taglib>
        <taglib-uri>http://displaytag.sourceforge.net/</taglib-uri>
        <taglib-location>/WEB-INF/tld/displaytag.tld</taglib-location>
    </taglib>

    <taglib>
        <taglib-uri>http://java.sun.com/jstl/fmt</taglib-uri>
        <taglib-location>/WEB-INF/tld/fmt.tld</taglib-location>
    </taglib>
    
    <taglib>
        <taglib-uri>http://java.sun.com/jstl/core</taglib-uri>
        <taglib-location>/WEB-INF/tld/c.tld</taglib-location>
    </taglib>
	
    
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
