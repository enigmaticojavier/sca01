<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE sqlMapConfig      
    PUBLIC "-//ibatis.apache.org//DTD SQL Map Config 2.0//EN"      
    "http://ibatis.apache.org/dtd/sql-map-config-2.dtd">
<sqlMapConfig>

  <!-- Configure a built-in transaction manager.  If you're using an 
       app server, you probably want to use its transaction manager 
       and a managed datasource -->
  <transactionManager type="JDBC" commitRequired="false">
    <dataSource type="SIMPLE">
      <property name="JDBC.Driver" value="oracle.jdbc.driver.OracleDriver"/>
      <property name="JDBC.ConnectionURL" value="jdbc:oracle:thin:@localhost:1521:SCADB"/>
      <property name="JDBC.Username" value="sca"/>
      <property name="JDBC.Password" value="sca"/>
    </dataSource>
  </transactionManager>

  
  <sqlMap resource="gob/pe/minam/sca/data/ibatis/xml/Parametro.xml"/>
  <sqlMap resource="gob/pe/minam/sca/data/ibatis/xml/Proyecto.xml"/>
  <sqlMap resource="gob/pe/minam/sca/data/ibatis/xml/Usuario.xml"/>
  <sqlMap resource="gob/pe/minam/sca/data/ibatis/xml/Acae.xml"/>
</sqlMapConfig>
